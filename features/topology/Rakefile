require 'json'
require 'pp'

FEATURES_TOPOLOGY_BASE = 'https://github.com/gjmurakami-10gen/mongo-meta-driver/tree/mongo-orchestration/features/topology'

def print_step(step, io)
  step.each do |key, value|
    case key
      when 'comments'
        value.each{|element| io.puts "    #{element['value']} " }
      when 'line'
      when 'match'
      when 'result'
      when 'keyword'
        io.print "#. **#{value.strip}** "
      when 'name'
        io.puts value
      else
        puts "step key: #{key}"
        pp value
    end
  end
end

def print_row(row, io)
  row.each do |key, value|
    case key
      when 'id'
      when 'line'
      when 'cells'
        io.puts "    | #{value.join(' | ')} |"
      when 'comments'
        value.each{|element| io.puts "    #{element['value']} " }
      else
        puts "row key: #{key}"
        pp value
    end
  end
end

def print_example(example, io)
  example.each do |key, value|
    case key
      when 'keyword'
      when 'name'
      when 'line'
      when 'description'
        io.puts "\nDescription:\n#{value.gsub(/^/, '| ')}" unless value.empty?
        io.puts
      when 'id'
      when 'rows'
        value.each{|element| print_row(element, io) }
      else
        puts "example key: #{key}"
        pp value
    end
  end
end

def print_scenario(scenario, io)
  scenario.each do |key, value|
    case key
      when 'keyword'
      when 'line'
      when 'id'
      when 'type'
      when 'name'
        heading = "Scenario: #{value}"
        io.puts "\n#{heading}\n#{heading.gsub(/./, '-')}"
      when 'description'
        io.puts "\nDescription:\n#{value.gsub(/^/, '| ')}" unless value.empty?
      when 'steps'
        io.puts "\nSteps:\n"
        value.each{|element| print_step(element, io) }
      when 'tags'
        io.puts "\nTags: #{value.collect{|tag| "`#{tag['name']}`"}.join(' ')}"
      when 'examples'
        io.puts "\nExamples:"
        io.puts
        value.each{|element| print_example(element, io) }
        io.puts
      when 'comments'
        value.each{|element| io.puts "    #{element['value']} " }
      else
        puts "scenario key: #{key}"
        pp value
    end
  end
end

def print_feature(feature, io)
  feature.each do |h|
    h.each do |key, value|
      case key
        when 'comments'
        when 'keyword'
        when 'line'
        when 'id'
        when 'uri'
          io.puts "\nURI\n| #{FEATURES_TOPOLOGY_BASE}/#{value}"
        when 'name'
          heading = "Feature: #{value}"
          io.puts "\n#{heading}\n#{heading.gsub(/./, '=')}"
        when 'description'
          io.puts "\nDescription:\n#{value.gsub(/^/, '| ')}"
        when 'elements'
          value.each{|element| print_scenario(element, io) }
        else
          puts "feature key: #{key}"
          pp value
      end
    end
  end
end

def print_autogenerated(io)
  io.print <<-EOT.gsub(/^\s+/,'')

    | This file is auto-generated. Please do not edit this file, instead please edit the sources.

  EOT
end

namespace :features do
  task :spec do
    base = 'features/topology'
    dest = 'common-topology-test-suite.rst'
    readme = 'README.rst'
    File.open(dest, 'w') do |file|
      print_autogenerated(file)
      file.print File.read(readme)
      file.print <<-EOT.gsub(/^\s+/,'')

        ====================
        Feature Descriptions
        ====================

      EOT
      features = %w[
        replica_set/configuration.feature
        replica_set/connection.feature
        replica_set/read_preference.feature
        replica_set/write_concern.feature
        sharded_cluster/configuration.feature
        sharded_cluster/connection.feature
        standalone/connection.feature
      ]
      features.each do |feature|
        json = `cucumber --dry-run --format json --require test/topology #{feature}`
        feature = JSON.parse(json)
        print_feature(feature, file)
      end
      print_autogenerated(file)
    end
  end
end

task :default => 'features:spec'
